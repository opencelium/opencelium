{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@entity/*": ["./src/entities/*"],
      "@application/*": ["./src/application/*"],
      "@style/*": ["./src/styles/*"],
      "@image/*": ["./src/img/*"],
      "@app_component/*": ["./src/components/*"],
      "@oc_modules/*": ["./oc_modules/*"],

      "@change_component/*": ["./src/entities/connection/components/components/general/change_component/*"],
      "@basic_components/*": ["./src/entities/connection/components/components/general/basic_components/*"],
      "@themes/*": ["./src/entities/connection/components/themes/*"],
      "@list_of_components/*": ["./src/entities/connection/components/list_of_components/*"],
      "@view_component/*": ["./src/entities/connection/components/view_component/*"],
      "@utils/*": ["./src/entities/connection/components/utils/components/*"],
      "@classes/*": ["./src/entities/connection/components/classes/components/*"],

      "@root/*": ["./src/entities/connection/*"],
      "@actions/*": ["/src/entities/connection/components/actions/*"],
      "@components/*": ["/src/entities/connection/components/components/*"],
      "@loading/*": ["/src/entities/connection/components/components/general/app/Loading/*"],
      "@decorators/*": ["/src/entities/connection/components/decorators/*"],
      "@epics/*": ["/src/entities/connection/components/epics/*"],
      "@validations/*": ["/src/entities/connection/components/validations/*"],
      "@update_assistant/*": ["/src/components/update_assistant/*"]
    }
  },
  "baseUrl": "./",
  "paths": {
    "crypto": [
      "node_modules/crypto-js"
    ]
  }
}