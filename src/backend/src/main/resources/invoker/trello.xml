            <request>
                <method>POST</method>
                <endpoint>{url}/1/cards?key={key}&amp;token={token}&amp;idList={LISTID}&amp;name={NAME}&amp;idMembers={MEMBERID}&amp;idLabels={LABELID}&amp;"</endpoint>
                <header>
                    <item name="Content-Type" type="string">application/json</item>
                </header>
