<invoker type="RESTful">
    <name>jira</name>
    <description>jira description</description>
    <hint>This interface provides the token by user auth. It works like basic_auth. You just need to replace password with added api-token (https://id.atlassian.com/manage-profile/security/api-tokens). Check out the documentation https://developer.atlassian.com/cloud/jira/platform/rest/v3/</hint>
    <requiredData>
        <item name="url" type="string" visibility="public"></item>
        <item name="username" type="string" visibility="public"/>
        <item name="password" type="string" visibility="protected"/>
        <item name="token" type="string" visibility="private">Basic {username:password}</item>
    </requiredData>
    <authType>basic</authType>
    <operations>
        <operation name="myself" type="test">
            <request>
                <method>GET</method>
                <endpoint>{url}/rest/api/3/myself</endpoint>
                <header>
                    <item name="Authorization" type="string">{token}</item>
                </header>
                <body/>
            </request>
            <response>
                <success status="200">
                    <header/>
                    <body/>
                </success>
                <fail status="401">
                    <header/>
                    <body/>
                </fail>
            </response>
        </operation>
        <operation name="issues" type="">
            <request>
                <method>GET</method>
                <endpoint>{url}/rest/api/3/search?jql=project="{PROJECTKEY}"</endpoint>
                <header>
                    <item name="Accept" type="string">application/json</item>
                    <item name="Authorization" type="string">{token}</item>
                </header>
                <body/>
            </request>
            <response>
                <success status="200">
                    <header>
                    </header>
                    <body type="object" format="json" data="raw">
                        <field name="values" type="array">
                           <field name="id" type="string"/>
                           <field name="key" type="string"/>
                            <field name="fields" type="object">
                              <field name="summary" type="string"/>
                              <field name="statuscategorychangedate" type="string"/>
                              <field name="timespent" type="string"/>
                              <field name="aggregatetimespent" type="string"/>
                              <field name="timeoriginalestimate" type="string"/>
                              <field name="aggregatetimeestimate" type="string"/>
                              <field name="labels" type="array"/>
                              <field name="status" type="object">
                                <field name="id" type="string"/>
                                <field name="name" type="string"/>                                
                              </field>
                              <field name="description" type="object">
                                <field name="content" type="array">
                                    <field name="content" type="array">
                                        <field name="text" type="string"/>
                                   </field>                                
                                </field>                                                                     
                              </field>                                                                 
                              <field name="assignee" type="object">
                                <field name="displayName" type="string"/>
                              </field>                                
                              <field name="components" type="array">
                                <field name="name" type="string"/>
                              </field>                                
                              <field name="versions" type="array">
                                <field name="name" type="string"/>
                              </field>                                                         
                              <field name="fixVersions" type="array">
                                <field name="name" type="string"/>
                              </field>
                            </field>                              
                        </field>
                    </body>
                </success>
                <fail status="400">
                    <header/>
                    <body/>
                </fail>
            </response>
        </operation>
        <operation name="issue" type="">
            <request>
                <method>GET</method>
                <endpoint>{url}/rest/api/3/issue/{ISSUEID}</endpoint>
                <header>
                    <item name="Accept" type="string">application/json</item>
                    <item name="Authorization" type="string">{token}</item>
                </header>
                <body/>
            </request>
            <response>
                <success status="200">
                    <header>
                    </header>
                    <body type="object" format="json" data="raw">
                        <field name="values" type="array">
                           <field name="id" type="string"/>
                           <field name="key" type="string"/>
                            <field name="fields" type="object">
                              <field name="summary" type="string"/>
                              <field name="statuscategorychangedate" type="string"/>
                              <field name="timespent" type="string"/>
                              <field name="aggregatetimespent" type="string"/>
                              <field name="timeoriginalestimate" type="string"/>
                              <field name="aggregatetimeestimate" type="string"/>
                              <field name="labels" type="array"/>
                              <field name="status" type="object">
                                <field name="id" type="string"/>
                                <field name="name" type="string"/>                                
                              </field>
                              <field name="description" type="object">
                                <field name="content" type="array">
                                    <field name="content" type="array">
                                        <field name="text" type="string"/>
                                   </field>                                
                                </field>                                                                     
                              </field>                                                                 
                              <field name="assignee" type="object">
                                <field name="displayName" type="string"/>
                              </field>                                
                              <field name="components" type="array">
                                <field name="name" type="string"/>
                              </field>                                
                              <field name="versions" type="array">
                                <field name="name" type="string"/>
                              </field>                                                         
                              <field name="fixVersions" type="array">
                                <field name="name" type="string"/>
                              </field>
                              <field name="attachment" type="object">
                                <field name="id" type="string"/>
                                <field name="created" type="string"/>
                                <field name="filename" type="string"/>
                                <field name="size" type="string"/>
                                <field name="content" type="string"/>
                                <field name="thumbnail" type="string"/>                                
                              </field>                              
                            </field>                               
                        </field>
                    </body>
                </success>
                <fail status="400">
                    <header/>
                    <body/>
                </fail>
            </response>
        </operation>                        
        <operation name="project" type="">
            <request>
                <method>GET</method>
                <endpoint>{url}/project</endpoint>
                <header>
                    <item name="Accept" type="string">application/json</item>
                    <item name="Authorization" type="string">{token}</item>
                </header>
                <body/>
            </request>
            <response>
                <success status="200">
                    <header>
                    </header>
                    <body/>
                </success>
                <fail status="400">
                    <header/>
                    <body/>
                </fail>
            </response>
        </operation>
        <operation name="commits" type="">
            <request>
                <method>GET</method>
                <endpoint>{url}/repositories/{workspace}/{repo_slug}/commits/</endpoint>
                <header>
                    <item name="Accept" type="string">application/json</item>
                    <item name="Authorization" type="string">{token}</item>
                </header>
                <body/>
            </request>
            <response>
                <success status="200">
                    <header>
                    </header>
                    <body type="object" format="json" data="raw">
                        <field name="values" type="array">
                           <field name="rendered" type="object">
                             <field name="message" type="object">
                               <field name="raw" type="string"/>
                             </field>   
                           </field>                  
                           <field name="author" type="string">
                             <field name="raw" type="string"/>
                           </field>                          
                           <field name="hash" type="string"/>
                        </field>
                    </body>
                </success>
                <fail status="400">
                    <header/>
                    <body/>
                </fail>
            </response>
        </operation>       
    </operations>
</invoker>
